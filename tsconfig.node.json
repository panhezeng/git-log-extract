{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "types/**/*.d.ts",
    "**/**.json",
    "version/**/*.mjs",
    "packages/**/*.config.ts",
    "packages/main/**/*.ts",
    "packages/preload/**/*.ts",
    "packages/common/**/*.tsx",
    "packages/common/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node"],
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/main/*": ["./packages/main/src/*"],
      "@/preload/*": ["./packages/preload/src/*"],
      "@/renderer/*": ["./packages/renderer/src/*"],
      "@/common/*": ["./packages/common/src/*"]
    }
  }
}
